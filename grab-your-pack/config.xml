<?xml version='1.0' encoding='utf-8'?>
<widget id="edu.luc.fall2015.comp422.grabyourpack" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>GrabYourPack</name>
    
    <description>
        An application to notify people about packages that arrive to them.
    </description>
    
    <author href="http://github.com/sauloaguiar/grab-your-pack">
        Team GrabYourPack
    </author>
    
    <content src="index.html" />
    
    <access origin="*" />
    
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
